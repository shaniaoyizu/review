<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:p="http://www.springframework.org/schema/p"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean class="com.sunbc.beans.autowire.Address" id="address"
        p:city="Beijing" p:street="HuiLongGuan">

    </bean><bean class="com.sunbc.beans.autowire.Address" id="address2"
        p:city="Beijing" p:street="HuiLongGuan"></bean>

    <bean class="com.sunbc.beans.autowire.Car" id="car"
        p:brand="Audi" p:price="300000"></bean>

    <bean class="com.sunbc.beans.autowire.Person" id="person"
        p:name="Tom" autowire="byName"></bean>
</beans>